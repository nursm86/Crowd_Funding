<!DOCTYPE html>
<html>
<head>
	<title>Create User</title>
</head>
<body>
	<a href="/home">Back</a> |
	<a href="/logout">Logout</a>
	<br>
	<div>
		<% if(typeof(msg1) != 'undefined') { %>
		<% if(msg1.length > 0) { %>
            <% msg1.forEach(function(error) { %>
            <p style="color:red"><%= error.msg %></p>
            <%})%>
             <% } %>
            <% } %>
		<%= typeof msg != 'undefined' ? msg : '' %>
	</div>
	<form method="post">
		<fieldset>
			<legend>Create New campaign</legend>
			<table>
				<tr>
					<td>Target Fund</td>
					<td><input type="text" name="target_fund"></td>
				</tr>
				<tr>
					<td>Campaign Type</td>
					<td><input type="text" name="campaigntype"></td>
				</tr>
				<tr>
					<td> <label for="Description"></label> Description</td>
					<td>
						<textarea id="Description" name="description" rows="4" cols="50"></textarea>
					</td>
				</tr>
				<tr>
					<td>Publish Date</td>
					<td><input type="datetime-local" name="publishdDate"></td>
				</tr>
				<tr>
					<td>End Date</td>
					<td><input type="datetime-local" name="enddate"></td>
				</tr>
				<tr>
					<td>Title</td>
					<td><input type="test" name="title"></td>
				</tr>
				<tr>
					<td></td>
					<td><input type="submit" name="submit" value="Submit"></td>
				</tr>
			</table>
		</fieldset>
	</form>
</body>
</html>
