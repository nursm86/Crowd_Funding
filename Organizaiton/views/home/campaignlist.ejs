<body>
	<h1> Campaign list</h1>

	<a href="/home">Back</a> | 
	<a href="/logout">logout</a> 
	<br>
	<div>
		<%= typeof msg != 'undefined' ? msg : '' %>
	</div>



	<div class="row">
		<% 
			users.forEach( function(std){ %>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><a href="/organization/view/<%= std.id %>/<%= std.uid %>/<%= std.target_fund %>/<%= std.raised_fund %>/<%= std.ctype %>/<%= std.description %>/<%= std.image %>/<%= std.publisedDate %>/<%= std.endDate %>/<%= std.title %>"><%= std.title %></a></h5>
        <p class="card-text"><%= std.description %></p>
        <a href="/organization/edit/<%= std.id %>/<%= std.target_fund %>/<%= std.raised_fund %>/<%= std.ctype %>/<%= std.description %>/<%= std.image %>/<%= std.endDate %>/<%= std.title %>">Edit</a> |
					<a href="/organization/delete/<%= std.id %>/<%= std.uid %>/<%= std.target_fund %>/<%= std.raised_fund %>/<%= std.ctype %>/<%= std.description %>/<%= std.image %>/<%= std.publisedDate %>/<%= std.endDate %>/<%= std.status %>/<%= std.title %>">Delete</a>|
					<a href="/organization/report/<%= std.id %>/<%= std.uid %>">Report</a>|
					<a href="/organization/bookmark/<%= std.id %>/<%= std.uid %>">Bookmark</a>
      </div>
    </div>
  </div>
  <%
			}); 
		%>
</div>


